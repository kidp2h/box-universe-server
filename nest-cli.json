{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",

  "compilerOptions": {
    "deleteOutDir": false,
    "builder": {
      "type": "swc",
      "options": {
        "watch": true
      }
    },
    "assets": ["**/mail/templates/*"],
    "typeCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
